generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  STAFF
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum SubmissionStatus {
  PENDING
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  RUNTIME_ERROR
  COMPILATION_ERROR
  INTERNAL_ERROR
  EXEC_FORMAT_ERROR
  MEMORY_LIMIT_EXCEEDED
  OUTPUT_LIMIT_EXCEEDED
  STORAGE_LIMIT_EXCEEDED
}

enum ContestScoringType {
  ACM
  SCORE
}

model User {
  id            String   @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  role          Role     @default(USER)
  score         Int      @default(0)
  attended      Int      @default(0)
  createdAt     DateTime
  updatedAt     DateTime

  sessions    Session[]
  accounts    Account[]
  submissions Submission[]

  contestParticipants ContestParticipant[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Problem {
  id                 Int        @id @default(autoincrement())
  slug               String     @unique
  title              String
  description        String
  difficulty         Difficulty
  constraints        String?
  inputFormat        String?
  outputFormat       String?
  allowedLanguageIds Int[]
  isPublished        Boolean    @default(true)
  participantCount   Int        @default(0)
  successCount       Int        @default(0)

  testCases   TestCase[]
  submissions Submission[]
  tags        ProblemTag[]

  contestProblems ContestProblem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("problem")
}

model TestCase {
  id        Int     @id @default(autoincrement())
  problemId Int
  input     String
  output    String
  isSample  Boolean @default(false)

  problem Problem            @relation(fields: [problemId], references: [id], onDelete: Cascade)
  results SubmissionResult[]

  @@map("test_case")
}

model Submission {
  id         Int    @id @default(autoincrement())
  userId     String
  problemId  Int
  languageId Int

  code          String
  status        SubmissionStatus @default(PENDING)
  executionTime Float?
  memoryUsed    Float?

  user     User               @relation(fields: [userId], references: [id])
  problem  Problem            @relation(fields: [problemId], references: [id])
  language String
  results  SubmissionResult[]

  createdAt DateTime @default(now())

  @@map("submission")
}

model SubmissionResult {
  id           Int     @id @default(autoincrement())
  submissionId Int
  testCaseId   Int
  actualOutput String?
  passed       Boolean
  runtime      Float?

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  testCase   TestCase   @relation(fields: [testCaseId], references: [id])

  @@map("submission_result")
}

model Tag {
  id       Int          @id @default(autoincrement())
  name     String       @unique
  problems ProblemTag[]

  @@map("tag")
}

model ProblemTag {
  problemId Int
  tagId     Int

  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([problemId, tagId])
  @@map("problem_tag")
}

model Contest {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  title       String
  description String?

  startAt  DateTime
  endAt    DateTime
  isPublic Boolean  @default(true)

  scoringType ContestScoringType
  freezeAt    DateTime?

  problems     ContestProblem[]
  participants ContestParticipant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contest")
}

model ContestProblem {
  contestId Int
  problemId Int
  order     Int
  maxScore  Int?

  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  @@id([contestId, problemId])
  @@map("contest_problem")
}

model ContestParticipant {
  contestId Int
  userId    String

  totalScore Int  @default(0)
  penalty    Int  @default(0)
  rank       Int?

  lastSubmitAt DateTime?

  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([contestId, userId])
  @@map("contest_participant")
}
